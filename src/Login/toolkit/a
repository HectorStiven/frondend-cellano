import { createSlice, PayloadAction } from "@reduxjs/toolkit";

interface AuthState {
  token: string | null;
  nombreUsuario: string | null;
  access: boolean;
}

const initialState: AuthState = {
  token: null,
  nombreUsuario: null,
  access: false,
};

const authSlice = createSlice({
  name: "auth",
  initialState,
  reducers: {
    // ðŸ”‘ Guardar token y nombre
    setAuthData: (
      state,
      action: PayloadAction<{ token: string; nombreUsuario: string }>
    ) => {
      state.token = action.payload.token;
      state.nombreUsuario = action.payload.nombreUsuario;
      state.access = true;
    },

    // ðŸšª Cerrar sesiÃ³n
    clearAuthData: (state) => {
      state.token = null;
      state.nombreUsuario = null;
      state.access = false;
    },

    // ðŸ”„ Cambiar acceso manualmente (opcional)
    setAccess: (state, action: PayloadAction<boolean>) => {
      state.access = action.payload;
    },
  },
});

export const { setAuthData, clearAuthData, setAccess } = authSlice.actions;
export default authSlice.reducer;
